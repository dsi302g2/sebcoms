
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">

{% endblock %}

{% block body %}


    <form name="f" action="" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%">

            <div class="panel panel-default" style="background: none">
                <div class="panel-heading">Ajout Article</div>
                <div class="panel-body">

                    <p>Code </p>
                    <input type="text" onkeyup="" class="form-control" id="codeArt" name="nom" />

                    <p>Titre </p>

                    <input type="text" onkeyup="" class="form-control" id="titreArt" name="nom" />
                    <p>Catégorie </p>
                    <div  class="form-group" style="width: 100%; margin-left: 0%">

                        <select class="form-control" id="sel1" name="parent">
                            <option value="0">
                                None
                            </option>
                           =
                            <!-- other options mel base de donnée : code symfony -->
                        </select>

                    </div><br/>

                    <p>Description</p>
                    <textarea class="form-control" rows="5" id="descArt"></textarea>

                    <p>Prix</p>

                    <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="prixArt" name="nom" />
                    <p>Images</p>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browse… <input type="file" id="imgArt">
                                    </span>
                                </span>
                                <input type="text" class="form-control" readonly>
                            </div>
                            <img id='img-upload'/>
                        </div>
                            <p>Quantité</p>

                            <input type="number" onkeyup="" class="form-control" id="qteArt" name="nom" />


                            <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                </div>


            </div>
            <br/>


        </div>
    </form>
{% endblock %}
