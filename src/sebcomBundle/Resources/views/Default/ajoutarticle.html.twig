

<head>
    <meta charset="UTF-8" />

    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}">

    <script src="{{ asset('bundles/bootstrap/js/jquery.js') }}" ></script>

    <script src=" {{ asset('bundles/bootstrap/js/bootstrap.min.js') }}" ></script>

    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">

    {% block stylesheets %}{% endblock %}
    <meta charset="UTF-8">
    <title>Article</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
{% block body %}


    <form name="f" action="/ajoutarticle" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%">

            <div class="panel panel-default" style="background: none">
                <div class="panel-heading">Ajout Article</div>
                <div class="panel-body">



                    <p>Titre </p>

                    <input type="text" onkeyup="" class="form-control" id="titreArt" name="nom" />
                    <p>Catégorie </p>
                    <div  class="form-group" style="width: 100%; margin-left: 0%">

                        <select class="form-control" id="sel1" name="categorie">
                            <option value="0">
                                None
                            </option>
                            {% if cat is defined %}
                                {% for c in cat %}
                                    <option value="{{ c.nom }}">
                                        {% if cat is defined %}
                                            <th>{{ c.nom }}</th>
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            {% endif %}
                            <!-- other options mel base de donnée : code symfony -->
                        </select>

                    </div><br/>

                    <p>Description</p>
                    <textarea class="form-control" rows="5" id="descArt" name="description"></textarea><br/>

                    <p>Prix</p>

                    <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="prixArt" name="prix" /><br/>
                    <p>Images</p><br/>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browse… <input type="file" id="imgArt" name="image">
                                    </span>
                                </span>
                                <input type="text" class="form-control" readonly>
                            </div>
                            <img id='img-upload'/>
                        </div>
                            <p>Quantité</p>

                            <input type="number" onkeyup="" style="width:10%;" class="form-control" id="qteArt" name="quantite" value="1" min="1"/>
                                <br/>

                            <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                </div>


            </div>
            <br/>

            <br/>
            <hr width="100%" />
            <input type="text" id="rech" placeholder="Search.." style="margin-bottom: 3%"/>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nom Article</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if art is defined %}
                {% for c in art %}
                <tr>
                    {% if art is defined %}
                        <th>{{ c.nom }}</th>
                    {% endif %}
                <th><a href="#">Modifier      </a><a href="{{ path('article_delete',{'id':c.id}) }}">Supprimer</a></th>

                        </tr>
                {% endfor %}
                {% endif %}
                {% if error is defined %}
                    <th>{{ error }}</th>
                {% endif %}


                </tbody>
            </table>

        </div>
    </form>
{% endblock %}
