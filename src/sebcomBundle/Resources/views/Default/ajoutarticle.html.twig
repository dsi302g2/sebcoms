


    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">
    {% endblock %}




{% block body %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block javascripts %}{% endblock %}

    <form name="f" action="/ajoutarticle" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%;">



            <input type="button" id="btnAdd" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" value="Ajouter" />
            <input type="button" id="btnModif" class="btn btn-default btn-md" data-toggle="modal" data-target="#myModal" value="Modifier" />
            <input type="button" id="btnSupp" class="btn btn-danger btn-md" data-toggle="modal" data-target="#myModalSupp" value="Supprimer" />

            <input type="text" id="rech" placeholder="Search.." style="height: 40px"/>

            <table class="table table-hover" style="background-color: white">
                <thead>
                <tr>
                    <th>Nom Article</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if art is defined %}
                {% for c in art %}
                <tr>
                    {% if art is defined %}
                        <th>{{ c.nom }}</th>
                    {% endif %}
                <th><a href="{{ path('article_modifier',{'id':c.id}) }}">Modifier      </a><a href="{{ path('article_delete',{'id':c.id}) }}">Supprimer</a></th>

                        </tr>
                {% endfor %}
                {% endif %}
                {% if error is defined %}
                    <th>{{ error }}</th>
                {% endif %}


                </tbody>
            </table>

        </div>

<!--------------------MODAL SUPPRIMER-------------------------------------------->

        <div id="myModalSupp" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Voulez vous vraiment Supprimer Cet Article ?</h4>
                    </div>
                    <div class="modal-body">
                        <div style="width: 30%; display: flex;margin-left: 35%">


                            <input type="submit" id="btnConfirm"  value="Supprimer" class="btn btn-danger btn-block btn-md" style="margin: 1%" />
                            <input type="submit" id="btnCancel"  value="Annuler" class="btn btn-default btn-block btn-md" style="margin: 1%" />

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>

        </div>

        <!---------------------------------MODAL D AJOUT--------------------------------------------------------->
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Ajout Article</h4>
                    </div>
                    <div class="modal-body">




                                <p>Titre </p>

                                <input type="text" onkeyup="" class="form-control" id="titreArt" name="nom" />
                                <p>Catégorie </p>
                                <div  class="form-group" style="width: 100%; margin-left: 0%">

                                    <select class="form-control" id="sel1" name="categorie">
                                        <option value="0">
                                            None
                                        </option>
                                        {% if cat is defined %}
                                            {% for c in cat %}
                                                <option value="{{ c.nom }}">
                                                    {% if cat is defined %}
                                                        <th>{{ c.nom }}</th>
                                                    {% endif %}
                                                </option>
                                            {% endfor %}
                                        {% endif %}
                                        <!-- other options mel base de donnée : code symfony -->
                                    </select>

                                </div><br/>

                                <p>Description</p>
                                <textarea class="form-control" rows="5" id="descArt" name="description"></textarea><br/>

                                <p>Prix</p>

                                <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="prixArt" name="prix" /><br/>
                                <p>Images</p><br/>

                                <div class="form-group">
                                    <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browse… <input type="file" id="imgArt" name="image">
                                    </span>
                                </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                    <img id='img-upload'/>
                                </div>
                                <p>Quantité</p>

                                <input type="number" onkeyup="" style="width:10%;" class="form-control" id="qteArt" name="quantite" value="1" min="1"/>
                                <br/>

                    </div>
                        <div class="modal-footer">

                            <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <br/>
        <!-------------------------------------------------------------------------->
    </form>
{% endblock %}


