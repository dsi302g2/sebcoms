
{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">

{% endblock %}
{% block body %}




    <form name="f" action="/modifiercat/{{ id }}" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 3%">

            <div class="panel panel-default" style="background-color:white">
                <div class="panel-heading">Modifier Catégorie</div>
                <div class="panel-body">

                    <p>Nom </p>
                    <input type="text" onkeyup="inputValidV2()" class="form-control" id="nomCat" name="nom" value="{{ catname }}" />

                    <p>Parent </p>

                    <div  class="form-group" style="width: 100%; margin-left: 0%">

                        <select class="form-control" id="sel1" name="parent">
                            <option value="0">
                                None
                            </option>

                            {% if cat is defined %}
                                {% for c in cat %}
                                    {% if c.nom != catname %}

                                    <option value="{{ c.id }}">
                                        {% if cat is defined %}
                                            <th>{{ c.nom }}</th>
                                        {% endif %}
                                    </option>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            <!-- other options mel base de donnée : code symfony -->
                        </select>



                    </div><br/>
                    <input type="submit" id="btnAjt"  value="Modifier" class="btn btn-success btn-block" /><br/>
                </div>


            </div>
            <br/>


        </div>
    </form>
{% endblock %}
