{% extends 'navbar.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">

{% endblock %}
{% block body %}


<form name="f" action="/ajoutcat" class="form-horizontal" method="POST">

    <script type="text/javascript" src="{{ asset('bundles/js/InputTest.js')}}"></script>

    <nav class="navbar navbar-default" >
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">SebCom</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">&nbsp;&nbsp;&nbsp; Home &nbsp;&nbsp;&nbsp;</a></li>

                <li><a href="/ajoutcat">Gestion Catégories</a></li>
                <li><a href="/ajoutarticle">Gestion Articles</a></li>
                <li><a href="#">Gestion Commandes</a></li>
                <li><a href="#">Gestion Livreurs</a></li>



            </ul>
            <ul class="nav navbar-nav navbar-right">

                {% if name is defined %}
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span>{{ name }}</a></li>
                {% endif %}
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> LogOut</a></li>
            </ul>
        </div>

    </nav>
    {% block javascripts %}{% endblock %}

    <div class="container" style="margin-top: 5%">
        <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">Ajout Catégorie</div>
            <div class="panel-body">

                <p>Nom </p>
                <input type="text" onkeyup="inputValidV2()" class="form-control" id="nomCat" name="nom" />

                <p>Parent </p>

                <div  class="form-group" style="width: 100%; margin-left: 0%">

                    <select class="form-control" id="sel1" name="parent">
                        <option value="0">
                            None
                        </option>
                        {% if cat is defined %}
                        {% for c in cat %}
                        <option value="{{ c.id }}">
                            {% if cat is defined %}
                                <th>{{ c.nom }}</th>
                            {% endif %}
                        </option>
                        {% endfor %}
                        {% endif %}
                        <!-- other options mel base de donnée : code symfony -->
                    </select>



                </div>
                <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
            </div>

        </div>
        </div>

    <hr width="100%" />
        <input type="text" id="rech" placeholder="Search.." style="margin-bottom: 3%"/>
       <div class="col-md-7">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nom Catégorie</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            {% if cat is defined %}
                {% for c in cat %}
                    <tr>
                        {% if cat is defined %}
                            <th>{{ c.nom }}</th>
                        {% endif %}
                        <th><a href="{{ path('categorie_modifier',{'id':c.id}) }}">Modifier      </a><a href="{{ path('categorie_delete',{'id':c.id}) }}">Supprimer</a></th>
                    </tr>
                {% endfor %}
            {% endif %}
            {% if error is defined %}
                <th>{{ error }}</th>
            {% endif %}



            </tbody>
        </table>
    </div>
    </div>
</form>
{% endblock %}
