
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">

{% endblock %}
{% block body %}

    <iframe name="frame" style="display:none;"></iframe>
<form name="f" action="/ajoutcat" class="form-horizontal" method="POST" target="frame" >
    {% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/js/InputTest.js')}}"></script>
  {% endblock %}

    <div class="container" style="margin-top: 5%">

        <input type="button" id="btnAdd" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" value="Ajouter" />
        <input type="button" id="btnModif" class="btn btn-default btn-md" data-toggle="modal" data-target="#myModal" value="Modifier" />
        <input type="button" id="btnSupp" class="btn btn-danger btn-md" data-toggle="modal" data-target="#myModalSupp" value="Supprimer" />

        <input type="text" id="rech" style="height: 40px" placeholder="Search.." /><br/>
        <table class="table table-hover" style="background-color:#f2f2f2 ;">
            <thead style="background-color:snow">
            <tr>
                <th>Nom Catégorie</th>
                <th>Parent</th>
            </tr>
            </thead>
            <tbody>





            {% if cat is defined %}
                {% for c in cat %}
                    <tr>
                        {% if cat is defined %}
                            <th>{{ c.nom }}</th>
                            <th>{{ c.parentid }}</th>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% endif %}
            {% if error is defined %}
                <th>{{ error }}</th>
            {% endif %}



            </tbody>
        </table>

    </div>


    <div id="myModalSupp" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Voulez vous vraiment Supprimer Cette Catégorie ?</h4>
                </div>
                <div class="modal-body">
                    <div style="width: 30%; display: flex;margin-left: 35%">


                    <input type="submit" id="btnConfirm"  value="Supprimer" class="btn btn-danger btn-block btn-md" style="margin: 1%" />
                    <input type="submit" id="btnCancel"  value="Annuler" class="btn btn-default btn-block btn-md" style="margin: 1%" />

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>

    </div>

                <!---------------------------------MODAL D AJOUT--------------------------------------------------------->
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Ajout Catégorie</h4>
                </div>
                <div class="modal-body">

                    <p>Nom </p>
                    <input type="text" onkeyup="inputValidV2()" class="form-control" id="nomCat" name="nom" />

                    <p>Parent </p>

                    <div  class="form-group">

                        <select class="form-control" id="sel1" name="parent">
                            <option value="0">
                                None
                            </option>
                            {% if cat is defined %}
                                {% for c in cat %}
                                    <option value="{{ c.id }}">
                                        {% if cat is defined %}
                                            <th>{{ c.nom }}</th>
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            {% endif %}
                            <!-- other options mel base de donnée : code symfony -->
                        </select>

                    </div>
                    <div class="modal-footer">

                        <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" data-dismiss="modal" /><br/>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <br/>
    <!-------------------------------------------------------------------------->
</form>
{% endblock %}
