{% extends 'navbar.html.twig' %}





    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">
    {% endblock %}




{% block body %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <script type="text/javascript" src="{{ asset('bundles/js/InputTest.js')}}"></script>

    <nav class="navbar navbar-default" >
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">SebCom</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">&nbsp;&nbsp;&nbsp; Home &nbsp;&nbsp;&nbsp;</a></li>

                <li><a href="/ajoutcat">Gestion Catégories</a></li>
                <li><a href="/ajoutarticle">Gestion Articles</a></li>
                <li><a href="/ajoutlivreur">Gestion Commandes</a></li>
                <li><a href="#">Gestion Livreurs</a></li>



            </ul>
            <ul class="nav navbar-nav navbar-right">

                {% if name is defined %}
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span>{{ name }}</a></li>
                {% endif %}
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> LogOut</a></li>
            </ul>
        </div>

    </nav>
    {% block javascripts %}{% endblock %}

    <form name="f" action="/ajoutarticle" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%">

            <div class="panel panel-default" style="background: none">
                <div class="panel-heading">Ajout Article</div>
                <div class="panel-body">



                    <p>Code Livreur</p>

                    <input type="text" onkeyup="" class="form-control" id="codeLiv" name="nom" />

                    <p>Nom/Prénom </p>

                    <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="nomPreLiv" name="prix" /><br/>


                    <p>Véhicule</p>

                    <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="vehLiv" name="prix" /><br/>

                    <p>Numéro Tel</p>

                    <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="numTelLiv" name="prix" /><br/>
                    

                    <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                </div>


            </div>
            <br/>

            <br/>
            <hr width="100%" />
            <input type="text" id="rech" placeholder="Search.." style="margin-bottom: 3%"/>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nom Article</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if art is defined %}
                    {% for c in art %}
                        <tr>
                            {% if art is defined %}
                                <th>{{ c.nom }}</th>
                            {% endif %}
                            <th><a href="{{ path('article_modifier',{'id':c.id}) }}">Modifier      </a><a href="{{ path('article_delete',{'id':c.id}) }}">Supprimer</a></th>

                        </tr>
                    {% endfor %}
                {% endif %}
                {% if error is defined %}
                    <th>{{ error }}</th>
                {% endif %}


                </tbody>
            </table>

        </div>
    </form>
{% endblock %}

