



    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">
    {% endblock %}




{% block body %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block javascripts %}{% endblock %}

    <form name="f" action="/ajoutlivreur" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%">



            <input type="button" id="btnAdd" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" value="Ajouter" />
            <input type="button" id="btnModif" class="btn btn-default btn-md" data-toggle="modal" data-target="#myModal" value="Modifier" />
            <input type="button" id="btnSupp" class="btn btn-danger btn-md" data-toggle="modal" data-target="#myModalSupp" value="Supprimer" />

            <input type="text" id="rech" placeholder="Search.." style="height: 40px"/>

            <table class="table table-hover" style="background-color: white">
                <thead>
                <tr>
                    <th>Nom Livreur</th>
                    <th>Véhicule</th>
                    <th>Numéro Tel</th>
                </tr>
                </thead>
                <tbody>
                {% if liv is defined %}
                    {% for c in liv %}
                        <tr>
                            {% if liv is defined %}
                                <th>{{ c.nom }}</th>
                                <th>{{ c.vehicule }}</th>
                                <th>{{ c.numtel }}</th>
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% endif %}
                {% if error is defined %}
                    <th>{{ error }}</th>
                {% endif %}


                </tbody>
            </table>

        </div>




        <!--------------------MODAL SUPPRIMER-------------------------------------------->

        <div id="myModalSupp" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Voulez vous vraiment Supprimer Ce Livreur ?</h4>
                    </div>
                    <div class="modal-body">
                        <div style="width: 30%; display: flex;margin-left: 35%">


                            <input type="submit" id="btnConfirm"  value="Supprimer" class="btn btn-danger btn-block btn-md" style="margin: 1%" />
                            <input type="submit" id="btnCancel"  value="Annuler" class="btn btn-default btn-block btn-md" style="margin: 1%" />

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>

        </div>

        <!---------------------------------MODAL D AJOUT--------------------------------------------------------->
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Ajout Livreur</h4>
                    </div>
                    <div class="modal-body">





                                <p>Nom/Prénom </p>

                                <input type="text" onkeyup=""  class="form-control" id="nomPreLiv" name="nom" /><br/>


                                <p>Véhicule</p>

                                <input type="text" onkeyup=""  class="form-control" id="vehLiv" name="vehicule" /><br/>

                                <p>Numéro Tel</p>

                                <input type="text" onkeyup=""  class="form-control" id="numTelLiv" name="numtel" /><br/>

                       </div>


                    <div class="modal-footer">

                        <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

        </div>
        </div>

        <!-------------------------------------------------------------------------->
    </form>
{% endblock %}


