{% extends 'navbar.html.twig' %}



    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">
    {% endblock %}




{% block body %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('bundles/js/InputTest.js')}}"></script>
        <script type="text/javascript">
            var rowId;
            var test=false;


            $(document).ready(function(){

                $('#tab').on('click', '.clickable-row', function(event) {
                    if($(this).hasClass('bg-primary'))
                    {
                        $(this).removeClass('bg-primary');
                        document.getElementById("btnModif").disabled = true;
                        document.getElementById("btnSupp").disabled = true;
                    }
                    else
                    {
                        $(this).addClass('bg-primary').siblings().removeClass('bg-primary');
                        document.getElementById("btnModif").disabled = false;
                        document.getElementById("btnSupp").disabled = false;
                        rowId=$(this).data('value');
                    }


                });


                $("#btnModif").click(function(){
                    $("#tit").text("Modifier Livreur");
                    $("#btnAjt").text("Modifier");

                    var rowValues=[];

                    $('.bg-primary').children().each(function() {

                        var val = $(this).html();
                        rowValues.push(val);


                    });


                    $('#nomPreLiv').val(rowValues[0]);
                    $('#vehLiv').val(rowValues[1]);
                    $('#numTelLiv').val(rowValues[2]);

                    test=true;

                });

                $("#btnAdd").click(function(){
                    $("#tit").text("Ajout Livreur");
                    $("#btnAjt").text("Ajouter");

                    $('#nomPreLiv').val("");
                    $('#vehLiv').val("");
                    $('#numTelLiv').val("");

                    test=false;
                });




            });

            function del()
            {



                var url='{{ path("livreur_delete", {'id':'rowVal' }) }}';

                url = url.replace("rowVal", rowId);

                document.getElementById("btnConfirm").setAttribute("href",url);
            }

        </script>
    {% endblock %}


    <form name="f" action="/ajoutlivreur" class="form-horizontal" method="POST" >
        <div class="container" style="margin-top: 5%">



            <input type="button" id="btnAdd" class="btn btn-default btn-md" data-toggle="modal" data-target="#myModal" value="Ajouter" />
            <input type="button" id="btnModif" disabled="false" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" value="Modifier" />
            <input type="button" id="btnSupp" disabled="false" class="btn btn-danger btn-md" data-toggle="modal" data-target="#myModalSupp" value="Supprimer" />

            <input type="text" id="rech" placeholder="Search.." style="height: 40px"/>

            <table class="table table-hover" id="tab" style="background-color: white">
                <thead>
                <tr>
                    <th>Nom Livreur</th>
                    <th>Véhicule</th>
                    <th>Numéro Tel</th>
                </tr>
                </thead>
                <tbody>
                {% if liv is defined %}
                    {% for c in liv %}
                        {% if liv is defined %}
                        <tr class="clickable-row" id="row" data-value="{{ c.id }}">

                                <th>{{ c.nom }}</th>
                                <th>{{ c.vehicule }}</th>
                                <th>{{ c.numtel }}</th>
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% endif %}
                {% if error is defined %}
                    <th>{{ error }}</th>
                {% endif %}


                </tbody>
            </table>

        </div>




        <!--------------------MODAL SUPPRIMER-------------------------------------------->

        <div id="myModalSupp" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Voulez vous vraiment Supprimer Ce Livreur ?</h4>
                    </div>
                    <div class="modal-body">
                        <div style="width: 30%; display: flex;margin-left: 35%">


                            <a id="btnConfirm" onclick="del()" class="btn btn-danger btn-block btn-md" style="margin: 1%" >Supprimer</a>
                            <input type="submit" id="btnCancel"  value="Annuler" class="btn btn-default btn-block btn-md" style="margin: 1%" />

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>

        </div>

        <!---------------------------------MODAL D AJOUT--------------------------------------------------------->
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="tit"></h4>
                    </div>
                    <div class="modal-body">





                                <p>Nom/Prénom </p>

                                <input type="text" onkeyup=""  class="form-control" id="nomPreLiv" name="nom" /><br/>


                                <p>Véhicule</p>

                                <input type="text" onkeyup=""  class="form-control" id="vehLiv" name="vehicule" /><br/>

                                <p>Numéro Tel</p>

                                <input type="text" onkeyup=""  class="form-control" id="numTelLiv" name="numtel" /><br/>

                       </div>


                    <div class="modal-footer">

                        <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

        </div>
        </div>

        <!-------------------------------------------------------------------------->
    </form>
{% endblock %}


