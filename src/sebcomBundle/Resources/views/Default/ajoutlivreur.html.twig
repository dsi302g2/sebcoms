{% extends 'navbar.html.twig' %}



    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">
    {% endblock %}




{% block body %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block javascripts %}{% endblock %}

    <form name="f" action="/ajoutlivreur" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%">

            <div class="panel panel-default" style="background: none">
                <div class="panel-heading">Ajout Article</div>
                <div class="panel-body">





                    <p>Nom/Prénom </p>

                    <input type="text" onkeyup=""  class="form-control" id="nomPreLiv" name="nom" /><br/>


                    <p>Véhicule</p>

                    <input type="text" onkeyup=""  class="form-control" id="vehLiv" name="vehicule" /><br/>

                    <p>Numéro Tel</p>

                    <input type="text" onkeyup=""  class="form-control" id="numTelLiv" name="numtel" /><br/>


                    <input type="submit" id="btnAjt"  value="Ajouter" class="btn btn-success btn-block" /><br/>
                </div>


            </div>
            <br/>

            <br/>
            <hr width="100%" />
            <input type="text" id="rech" placeholder="Search.." style="margin-bottom: 3%"/>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nom Livreur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if liv is defined %}
                    {% for c in liv %}
                        <tr>
                            {% if liv is defined %}
                                <th>{{ c.nom }}</th>
                            {% endif %}
                            <th><a href="">Modifier      </a><a href="">Supprimer</a></th>

                        </tr>
                    {% endfor %}
                {% endif %}
                {% if error is defined %}
                    <th>{{ error }}</th>
                {% endif %}


                </tbody>
            </table>

        </div>
    </form>
{% endblock %}

