

<head>
    <meta charset="UTF-8" />

    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}">

    <script src="{{ asset('bundles/bootstrap/js/jquery.js') }}" ></script>

    <script src=" {{ asset('bundles/bootstrap/js/bootstrap.min.js') }}" ></script>

    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutArticle.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/Style/StyleFileAjoutCat.css') }}">

    {% block stylesheets %}{% endblock %}
    <meta charset="UTF-8">
    <title>Article</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
{% block body %}

    <script type="text/javascript" src="{{ asset('bundles/js/InputTest.js')}}"></script>

    <nav class="navbar navbar-default" >
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">SebCom</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">&nbsp;&nbsp;&nbsp; Home &nbsp;&nbsp;&nbsp;</a></li>

                <li><a href="/ajoutcat">Gestion Catégories</a></li>
                <li><a href="/ajoutarticle">Gestion Articles</a></li>
                <li><a href="#">Gestion Commandes</a></li>
                <li><a href="#">Gestion Livreurs</a></li>



            </ul>
            <ul class="nav navbar-nav navbar-right">

                {% if name is defined %}
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span>{{ name }}</a></li>
                {% endif %}
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> LogOut</a></li>
            </ul>
        </div>

    </nav>
    {% block javascripts %}{% endblock %}

    <form name="f" action="/modifierarticle/{{ id }}" class="form-horizontal" method="POST">
        <div class="container" style="margin-top: 5%">

            <div class="panel panel-default" style="background: none">
                <div class="panel-heading">Ajout Article</div>
                <div class="panel-body">



                    <p>Titre </p>

                    <input type="text" onkeyup="" class="form-control" id="titreArt" name="nom" value="{{ artname }}"/>
                    <p>Catégorie </p>
                    <div  class="form-group" style="width: 100%; margin-left: 0%">

                        <select class="form-control" id="sel1" name="categorie">
                            <option value="0">
                                None
                            </option>
                            {% if cat is defined %}
                                {% for c in cat %}
                                    <option value="{{ c.nom }}">
                                        {% if cat is defined %}
                                            <th>{{ c.nom }}</th>
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            {% endif %}
                            <!-- other options mel base de donnée : code symfony -->
                        </select>

                    </div><br/>

                    <p>Description</p>
                    <textarea class="form-control" rows="5" id="descArt" name="description">{{ artdescription }}</textarea><br/>

                    <p>Prix</p>

                    <input type="text" onkeyup="" placeholder="..DT" class="form-control" id="prixArt" name="prix" value="{{ artprix }}" /><br/>
                    <p>Images</p><br/>

                    <div class="form-group">
                        <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browse… <input type="file" id="imgArt" name="image" value="{{ artimage }}">
                                    </span>
                                </span>
                            <input type="text" class="form-control" readonly>
                        </div>
                        <img id='img-upload'/>
                    </div>
                    <p>Quantité</p>

                    <input type="number" onkeyup="" style="width:10%;" class="form-control" id="qteArt" name="quantite" value="{{ artquantite }}" min="1"/>
                    <br/>

                    <input type="submit" id="btnAjt"  value="Modifier" class="btn btn-success btn-block" /><br/>
                </div>


            </div>
            <br/>

            <br/>




        </div>
    </form>
{% endblock %}
